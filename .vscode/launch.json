  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against localhost",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/nerfstudio/viewer/app"
    },
    {
      "name": "Python: Attach using Process ID",
      "type": "python",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": true
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: images",
      "type": "python",
      "request": "launch",
      "program": "nerfstudio/scripts/process_data.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "images",
        "--data", "data/ball/colmap/images",
        "--output-dir", "data/ball",
        "--skip-colmap",
      ]
    },
    {
      "name": "Python: train",
      "type": "python",
      "request": "launch",
      "program": "nerfstudio/scripts/train.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "instant-ngp",
        // "nerfacto",
        // "neuralangelo",
        "--pipeline.model.estimate-normals", "True",
        // "--pipeline.model.use-gradient-scaling", "True",
        // "--optimizers.fields.scheduler.max-steps", "20000",
        "--max_num_iterations", "2000",
        // "--enable-profiler", "True",
        "--vis", "wandb",
        "nerfstudio-data",
        // "--center-method", "focus",
        "--train-split-fraction", "1.0",
        "--data", "data/ball",
      ]
    },
    {
      "name": "Python: export",
      "type": "python",
      "request": "launch",
      "program": "nerfstudio/scripts/exporter.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "pointcloud",
        "--load-config", "outputs/unnamed/instant-ngp/2023-07-12_104726/config.yml",
        "--output-dir", "data/ball",
        "--num-points", "3000000",
        "--remove-outliers", "False",
        // "--normal-method", "open3d",
      ]
    },
    {
      "name": "Python: export sdffield",
      "type": "python",
      "request": "launch",
      "program": "nerfstudio/scripts/exporter.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "sdffield",
        "--load-config", "outputs/unnamed/neuralangelo/2023-07-12_030014/config.yml",
        "--output-dir", "data/ball",
      ]
    },
    {
      "name": "Python: NeuS-facto on DTU (no mono-prior)",
      "type": "python",
      "request": "launch",
      "program": "nerfstudio/scripts/train.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "CUDA_VISIBLE_DEVICES": "0" },
      "args": [
        "neus-facto",
        "--pipeline.model.sdf-field.inside-outside=False",
        "--vis=wandb",
        "sdfstudio-data",
        "--data=data/sdfstudio-demo-data/dtu-scan65",
        "--include_mono_prior=False",
        "--auto-orient=True"
      ]
    }
  ]
}
